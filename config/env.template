# RAG System Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# API Keys (Required)
# ============================================
# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: Gemini API key (if using Gemini instead of Groq)
# GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8001
FRONTEND_PORT=8501
API_URL=http://localhost:8001

# ============================================
# Model Configuration
# ============================================
# Embedding model (Sentence Transformers)
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, etc.
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Model (Groq)
# Options: llama-3.3-70b-versatile, llama-3.1-70b-versatile, mixtral-8x7b-32768
LLM_MODEL=llama-3.3-70b-versatile

# LLM Provider: groq or gemini
LLM_PROVIDER=groq

# ============================================
# RAG Configuration
# ============================================
# Number of document chunks to retrieve
TOP_K=5

# LLM temperature (0.0 to 2.0)
TEMPERATURE=0.7

# Maximum tokens to generate
MAX_TOKENS=512

# ============================================
# Document Processing
# ============================================
# Chunk size in characters
CHUNK_SIZE=1000

# Overlap between chunks in characters
CHUNK_OVERLAP=200

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md

# ============================================
# Vector Store Configuration
# ============================================
# FAISS index path
INDEX_PATH=data/embeddings/faiss.index

# Metadata path
METADATA_PATH=data/embeddings/metadata.json

# ============================================
# CORS Configuration
# ============================================
# Allowed CORS origins (comma-separated)
# For production, specify exact origins
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Production mode (restricts CORS)
PRODUCTION=false

# ============================================
# Logging Configuration (Day-Wise)
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Centralized logs directory
BASE_LOG_DIR=src/logs

# Log file path (legacy, for backward compatibility)
LOG_FILE=rag_system.log

# Maximum log file size in bytes (10MB)
LOG_MAX_BYTES=10485760

# Number of backup log files
LOG_BACKUP_COUNT=5

# Days to retain logs before archiving
LOG_RETENTION_DAYS=30

# Create symlinks to current day's logs for easy access
ENABLE_LOG_SYMLINKS=true

# ============================================
# OPIK Cloud Configuration (Observability)
# ============================================
# Get your API key from: https://www.comet.com/opik/<workspace>/get-started
OPIK_API_KEY=your_opik_api_key_here

# Your Comet workspace name (visible in Opik dashboard URL)
OPIK_WORKSPACE=your_workspace_name

# Project name for organizing traces
OPIK_PROJECT_NAME=rag-system

# Enable/disable OPIK tracing
OPIK_ENABLED=true

# For local Docker setup, use: http://localhost:5173/api
# For cloud, leave empty or use: https://www.comet.com/opik/api
# OPIK_URL_OVERRIDE=

# ============================================
# Frontend Configuration
# ============================================
# Request timeout in seconds
REQUEST_TIMEOUT=180

# Maximum retries for API calls
MAX_RETRIES=3

